package exercice1;

public class Robot {
	
	private String referenceRobot;
	private String nomRobot;
	private int x;
	private int y;
	private int orientationRobot;
	private static int nombreDeRobot = 1;
	
	private static final int NORD = 1;
	private static final int SUD = 2;
	private static final int EST = 3;
	private static final int OUEST = 4;

	
	public Robot(String nomRobot ,int x ,int y, int orientationRobot  ){
		this.referenceRobot = "ROB"+ nombreDeRobot;
		this.nomRobot = nomRobot;
		this.x = x;
		this.y = y;
		this.orientationRobot = orientationRobot;
		
		this.nombreDeRobot++ ;		
		
	}
	
	public Robot(String nomRobot){
		this.referenceRobot = "ROB"+ nombreDeRobot;
		this.nomRobot = nomRobot;
		this.x = 0;
		this.y = 0;
		this.orientationRobot = 1;
		
		this.nombreDeRobot++ ;		
		
	}
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub	
		  
	}

}
